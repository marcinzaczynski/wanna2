<Application x:Class="wanna2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:wanna2"
             StartupUri="WindowMain.xaml">
    <Application.Resources>
        <Style x:Key="ControlStyle" TargetType="Control">
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>
        <Style TargetType="Label" BasedOn="{StaticResource ControlStyle}"/>
        <Style TargetType="TextBox" BasedOn="{StaticResource ControlStyle}"/>
        <Style x:Key="DolnyPrzycisk" TargetType="Button" BasedOn="{StaticResource ControlStyle}">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource ControlStyle}"/>
    </Application.Resources>
</Application>
